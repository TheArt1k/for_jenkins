pipeline {
    agent any

    stages {
        stage('Get Chuck Norris Joke') {
            steps {
                script {
                    def apiUrl = 'https://api.chucknorris.io/jokes/random'
                    echo "API URL: $apiUrl"

                    def response = powershell(
                        returnStatus: true,
                        script: "Invoke-RestMethod -Uri $apiUrl -Method Get -UseBasicParsing"
                    )

                    echo "Exit code: $response"

                    if (response == 0) {
                        def jokeInfo = powershell(
                            returnStdout: true,
                            script: "Invoke-RestMethod -Uri $apiUrl -Method Get -UseBasicParsing | ConvertFrom-Json"
                        )

                        echo "Chuck Norris Joke: ${jokeInfo}"
                    } else {
                        error "Failed to get Chuck Norris joke. Exit code: $response"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded. Sending notification...'
            // Добавьте здесь шаги для уведомления об успешной сборке
        }
        failure {
            echo 'Pipeline failed. Sending notification...'
            // Добавьте здесь шаги для уведомления об ошибке сборки
        }
    }
}
